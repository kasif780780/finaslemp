@model IEnumerable<EmpManager.Entities.Lead>
@using EmpManager.Entities;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Master1Layout.cshtml";
}



<link href="
https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Lead</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home/Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Lead</li>
            </ul>
        </div>
        <div class="col-auto float-right ml-auto">
            @Html.Partial("_CreateButtonPartial")
            <div class="view-icons">
                <a href="#" class="grid-view btn btn-link active"><i class="fa fa-th"></i></a>
                <a href="#" class="list-view btn btn-link"><i class="fa fa-bars"></i></a>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <div class="card shadow-sm p-3 mb-5 bg-white rounded">
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Enquiry</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>

                        <td>@item.CreatedDate.ToLongDateString()</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>

                        <td>@item.Enquiryfor</td>
                        <td>@item.Status</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.LeadID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.LeadID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.LeadID })
                        </td>
                    </tr>

                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>


<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>


